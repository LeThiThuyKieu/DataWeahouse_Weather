<?xml version="1.0" encoding="UTF-8"?>
<datawarehouse-config>
    <environment>QA</environment>
    <databases>
        <weatherdb>
            <host>qa-db-server.company.com</host>
            <port>3306</port>
            <database>weatherdb_qa</database>
            <username>qa_user</username>
            <password>qa_password</password>
        </weatherdb>
        <controldb>
            <host>qa-db-server.company.com</host>
            <port>3306</port>
            <database>controldb_qa</database>
            <username>qa_user</username>
            <password>qa_password</password>
        </controldb>
    </databases>
    
    <staging>
        <directory>staging_data_qa</directory>
        <file_pattern>data_yyyymmdd_hhmm.csv</file_pattern>
        <retention_days>14</retention_days>
    </staging>
    
    <apis>
        <weather-api>
            <name>Open-Meteo Weather API</name>
            <url>https://api.open-meteo.com/v1/forecast</url>
            <cities>
                <city name="Ho Chi Minh City" latitude="10.82" longitude="106.63"/>
                <city name="Hanoi" latitude="21.02" longitude="105.84"/>
                <city name="Da Nang" latitude="16.05" longitude="108.21"/>
            </cities>
            <parameters>
                <hourly>temperature_2m,relative_humidity_2m</hourly>
            </parameters>
        </weather-api>
    </apis>
    
    <etl-processes>
        <fetch>
            <enabled>true</enabled>
            <schedule>0 */4 * * *</schedule>
            <timeout>180</timeout>
        </fetch>
        <load>
            <enabled>true</enabled>
            <batch_size>500</batch_size>
            <truncate_before_load>true</truncate_before_load>
        </load>
        <transform>
            <enabled>true</enabled>
            <batch_size>500</batch_size>
        </transform>
    </etl-processes>
    
    <logging>
        <level>INFO</level>
        <file>logs/etl-qa.log</file>
        <max_size>10MB</max_size>
        <backup_count>5</backup_count>
    </logging>
</datawarehouse-config>



